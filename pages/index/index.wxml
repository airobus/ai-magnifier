<!--index.wxml-->

<!-- 识别结果展示 -->
<block wx:if="{{imageUrl}}">
  <view class="result-page">
    <!-- 图片预览 -->
    <image class="preview-image" src="{{imageUrl}}" mode="widthFix"></image>
    
    <!-- AI回答区域 -->
    <view class="answer-panel {{isAnalyzing || streamResponse ? 'sliding-up' : ''}}">
      <!-- 充电式进度条 -->
      <view class="battery-progress" wx:if="{{isAnalyzing}}">
        <view class="battery-outline">
          <view class="battery-head"></view>
          <view class="battery-level"></view>
        </view>
        <view class="analyzing-text">正在分析中...</view>
      </view>
      
      <view class="message-bubble">
        <text user-select>{{streamResponse}}</text>
      </view>
    </view>
  </view>
</block>

<!-- 首页内容 -->
<block wx:else>
  <scroll-view class="scrollarea" scroll-y type="list">
    <view class="container">
      <view class="eyes-container">
        <view class="eye">
          <view class="pupil"></view>
        </view>
        <view class="eye">
          <view class="pupil"></view>
        </view>
      </view>
    </view>
  </scroll-view>
</block>

<!-- 底部按钮 -->
<view class="action-section">
  <view class="button-group">
    <button class="action-button" bindtap="chooseImage" data-source="camera">
      <text class="button-icon">📸</text>
      <text>拍照识别</text>
    </button>
    <button class="action-button" bindtap="chooseImage" data-source="album">
      <text class="button-icon">🖼️</text>
      <text>相册选择</text>
    </button>
  </view>
</view>
