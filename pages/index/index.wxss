/**index.wxss**/
page {
  --primary-color: #FF6B35;     /* 深橙色作为主色 */
  --text-color: #333333;        /* 深灰色文字 */
  --background-color: #FFB700;  /* 深黄色背景 */
  height: 100vh;
  background-color: var(--background-color);
}

.container {
  padding: 0 30rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 标题模块 */
.header {
  padding: 60rpx 0;
  text-align: center;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInDown 0.8s ease;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
}

/* 内容展示模块 */
.content-section {
  flex: 1;
  margin: 30rpx 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--border-radius);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  backdrop-filter: blur(10px);
}

.welcome-animation {
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  margin: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
}

.scan-animation {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

/* 修改眼睛容器样式 */
.eyes-container {
  height: 60vh;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 480rpx;
  padding: 0;
  background: #FFFFFF;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx;
}

.eye {
  width: 160rpx;
  height: 160rpx;
  background: var(--secondary-color);
  border-radius: 50%;
  position: relative;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: blink 4s ease-in-out infinite;
}

/* 按钮样式 */
.button-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mega-button {
  width: 240rpx;
  height: 240rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 165, 0, 0.3);
  transition: all 0.3s ease;
}

.mega-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 165, 0, 0.2);
}

.button-inner {
  width: 220rpx;
  height: 220rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.button-icon {
  font-size: 64rpx;
  margin-bottom: 12rpx;
  color: var(--primary-color);
}

.button-text {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 500;
}

/* 修改消息气泡样式 */
.message-bubble {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  color: var(--text-color);
  line-height: 1.6;
}

/* 修改分析进度条样式 */
.battery-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 30rpx;
}

.battery-outline {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 4rpx solid #B87333;
  border-radius: 40rpx;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.battery-level {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(90deg, #FFB700, #FFD700);
  border-radius: 40rpx;
  animation: progress 3s ease-in-out forwards;
  z-index: 1;
}

.analyzing-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  z-index: 2;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  pointer-events: none;
}

.eye:first-child {
  transform: none;
}

.eye:last-child {
  transform: none;
}

.eye.white {
  background: #FFFFFF;
}

.pupil {
  width: 60rpx;
  height: 60rpx;
  background: var(--accent-color);
  border-radius: 50%;
  position: relative;
  animation: look-around 5s ease-in-out infinite;
}

.eye.white .pupil {
  background: #333333;
}

.guide-text {
  font-size: 32rpx;
  color: #666;
  margin-top: 40rpx;
  text-align: center;
  animation: fadeIn 1s ease-in-out;
}

.result-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.result-section:last-child {
  margin-bottom: 0;
}

.result-section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.result-section-title .dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary-color);
  border-radius: 50%;
  margin-right: 12rpx;
  display: inline-block;
}

.result-section-content {
  color: var(--text-color);
  line-height: 1.6;
  padding-left: 24rpx;
  border-left: 4rpx solid #eee;
}

.result-container {
  background: #fff;
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-top: 20rpx;
  height: 800rpx;
}

.result-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-content {
  color: #333;
  line-height: 1.8;
  padding: 20rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
}

.controls {
  display: flex;
  gap: 12rpx;
}

.control-btn {
  min-width: 60rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  color: #666;
}

/* 加载动画 */
.analyzing-animation {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--primary-color);
  border-radius: 50%;
  animation: bounce 0.6s infinite;
}

.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

/* 按钮模块 */
.action-section {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1000;
}

.button-container {
  position: relative;
  height: 120rpx;
  width: 100%;
}

.mega-button {
  position: absolute;
  width: 100%;
  height: 120rpx;
  border-radius: 60rpx;
  background: #2A2A2A;
  border: 2rpx solid #B87333;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(184, 115, 51, 0.2);
  overflow: hidden;
}

.button-inner {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #2A2A2A 0%, #3A3A3A 100%);
  z-index: 2;
  gap: 20rpx;
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #B87333;
}

.button-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #B87333;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.button-glow {
  position: absolute;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(184, 115, 51, 0.15) 0%, transparent 70%);
  animation: rotate 8s linear infinite;
  z-index: 1;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.mega-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 68, 68, 0.2);
}

/* 添加眼睛动画 */
@keyframes blink {
  0%, 100% { transform: scaleY(1); }
  95% { transform: scaleY(1); }
  97.5% { transform: scaleY(0.1); }
}

@keyframes look-around {
  0%, 100% { transform: translate(0, 0); }
  25% { transform: translate(10rpx, -10rpx); }
  50% { transform: translate(-10rpx, 10rpx); }
  75% { transform: translate(-10rpx, -10rpx); }
}

/* 添加充电动画 */
@keyframes charging {
  0% { width: 0; }
  50% { width: 100%; }
  100% { width: 0; }
}

/* 按钮动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.primary-btn {
  background: #07c160;
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx;
}

.primary-btn:active {
  opacity: 0.8;
}

.font-control {
  display: flex;
  gap: 10rpx;
}

.font-control button {
  margin: 0;
  padding: 0 20rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #333;
}

.custom-nav {
  display: none;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

/* 进度条样式 */
.progress-container {
  width: 100%;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #E8E8E8;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-inner {
  height: 100%;
  background: var(--primary-color);
  border-radius: 3rpx;
  width: 0;
  animation: progress 2s ease-in-out infinite;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 进度条动画 */
@keyframes progress {
  0% {
    width: 0;
    opacity: 1;
  }
  50% {
    width: 100%;
    opacity: 0.5;
  }
  100% {
    width: 0;
    opacity: 1;
  }
}

/* 移除旧的按钮样式 */
.primary-button, .secondary-button {
  display: none;
}

/* 眼睛动画 */
@keyframes blink {
  0%, 95%, 100% { transform: scaleY(1); }
  97% { transform: scaleY(0.1); }
}

