/**index.wxss**/
page {
  --primary-color: #1E293B;     /* 深蓝色作为主色 */
  --secondary-color: #334155;   /* 次要深蓝色 */
  --accent-color: #3B82F6;      /* 亮蓝色作为强调色 */
  --text-color: #F8FAFC;        /* 浅色文字 */
  --background-color: #0F172A;  /* 深色背景 */
  --border-radius: 16rpx;
  height: 100vh;
  background-color: var(--background-color); /* 添加背景色 */
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  margin-top: calc(128rpx + env(safe-area-inset-top));
}

.container {
  padding: 0 30rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 标题模块 */
.header {
  padding: 60rpx 0;
  text-align: center;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInDown 0.8s ease;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
}

/* 内容展示模块 */
.content-section {
  flex: 1;
  margin: 30rpx 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--border-radius);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  backdrop-filter: blur(10px);
}

.welcome-animation {
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  margin: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
}

.scan-animation {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.eyes-container {
  height: 60vh;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 480rpx;
  padding: 0;
}

.eye {
  width: 160rpx;
  height: 160rpx;
  background: var(--secondary-color);
  border-radius: 50%;
  position: relative;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: blink 4s ease-in-out infinite;
}

.eye:first-child {
  transform: none;
}

.eye:last-child {
  transform: none;
}

.eye.white {
  background: #FFFFFF;
}

.pupil {
  width: 60rpx;
  height: 60rpx;
  background: var(--accent-color);
  border-radius: 50%;
  position: relative;
  animation: look-around 5s ease-in-out infinite;
}

.eye.white .pupil {
  background: #333333;
}

.guide-text {
  font-size: 32rpx;
  color: #666;
  margin-top: 40rpx;
  text-align: center;
  animation: fadeIn 1s ease-in-out;
}

.result-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.result-section:last-child {
  margin-bottom: 0;
}

.result-section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.result-section-title .dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary-color);
  border-radius: 50%;
  margin-right: 12rpx;
  display: inline-block;
}

.result-section-content {
  color: var(--text-color);
  line-height: 1.6;
  padding-left: 24rpx;
  border-left: 4rpx solid #eee;
}

.result-container {
  background: #fff;
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-top: 20rpx;
  height: 800rpx;
}

.result-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-content {
  color: #333;
  line-height: 1.8;
  padding: 20rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
}

.controls {
  display: flex;
  gap: 12rpx;
}

.control-btn {
  min-width: 60rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  color: #666;
}

/* 加载动画 */
.analyzing-animation {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--primary-color);
  border-radius: 50%;
  animation: bounce 0.6s infinite;
}

.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

/* 按钮模块 */
.action-section {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1000;
}

.button-container {
  position: relative;
  height: 120rpx; /* 与按钮高度一致 */
  width: 100%;
}

.mega-button {
  position: absolute;
  width: 100%;
  height: 120rpx; /* 减小高度 */
  border-radius: 60rpx;
  background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.3);
  overflow: hidden;
}

.button-inner {
  display: flex;
  flex-direction: row; /* 改为水平排列 */
  align-items: center;
  justify-content: center;
  color: var(--text-color);
  z-index: 2;
  gap: 20rpx; /* 添加间距 */
}

.icon-wrapper {
  width: 80rpx; /* 减小图标容器尺寸 */
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0; /* 移除底部间距 */
}

.button-icon {
  font-size: 48rpx; /* 稍微减小图标大小 */
}

.button-text {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 0; /* 移除底部间距 */
}

.button-hint {
  font-size: 24rpx;
  opacity: 0.8;
}

.button-glow {
  position: absolute;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
  animation: rotate 8s linear infinite;
  z-index: 1;
}

/* 按钮动画 */
@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.mega-button.active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.primary-btn {
  background: #07c160;
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx;
}

.primary-btn:active {
  opacity: 0.8;
}

.font-control {
  display: flex;
  gap: 10rpx;
}

.font-control button {
  margin: 0;
  padding: 0 20rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #333;
}

.custom-nav {
  display: none;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

/* 进度条样式 */
.progress-container {
  width: 100%;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #E8E8E8;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-inner {
  height: 100%;
  background: var(--primary-color);
  border-radius: 3rpx;
  width: 0;
  animation: progress 2s ease-in-out infinite;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 进度条动画 */
@keyframes progress {
  0% {
    width: 0;
    opacity: 1;
  }
  50% {
    width: 100%;
    opacity: 0.5;
  }
  100% {
    width: 0;
    opacity: 1;
  }
}

/* 移除旧的按钮样式 */
.primary-button, .secondary-button {
  display: none;
}

/* 眼睛动画 */
@keyframes blink {
  0%, 95%, 100% { transform: scaleY(1); }
  97% { transform: scaleY(0.1); }
}

@keyframes look-around {
  0%, 100% { transform: translate(0, 0); }
  25% { transform: translate(15rpx, -15rpx); }
  50% { transform: translate(-15rpx, 15rpx); }
  75% { transform: translate(15rpx, 15rpx); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
  width: 4rpx;
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: var(--primary-color);
  border-radius: 2rpx;
}

/* 结果页面样式 */
.result-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

/* 图片预览 */
.preview-image {
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  background: var(--background-color);
}

/* AI回答面板 */
.answer-panel {
  position: fixed;
  top: 33vh;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--secondary-color);
  padding: 30rpx;
  border-radius: 60rpx 60rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.2);
  z-index: 2;
}

/* 面板滑入动画 */
.answer-panel.sliding-up {
  transform: translateY(0);
}

/* 充电式进度条 */
.battery-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0;
}

.battery-outline {
  width: 200rpx;
  height: 80rpx;
  border: 6rpx solid var(--text-color);
  border-radius: 15rpx;
  padding: 4rpx;
  position: relative;
}

.battery-head {
  position: absolute;
  right: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 30rpx;
  background: var(--text-color);
  border-radius: 0 4rpx 4rpx 0;
}

.battery-level {
  height: 100%;
  background: var(--accent-color);
  border-radius: 6rpx;
  width: 0;
  animation: charging 3s ease-in-out forwards; /* 修改为只执行一次 */
}

.analyzing-text {
  color: var(--text-color);
  font-size: 28rpx;
  margin-top: 20rpx;
  opacity: 0.8;
}

/* 修改充电动画 */
@keyframes charging {
  0% {
    width: 0%;
  }
  100% {
    width: 100%;
  }
}

/* 消息气泡样式调整 */
.message-bubble {
  max-height: calc(67vh - 180rpx); /* 减去padding和其他元素的高度 */
  overflow-y: auto;
  background: var(--primary-color);
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-color);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  margin-top: 20rpx;
}

/* 打字动画指示器 */
.typing-indicator {
  display: flex;
  gap: 6rpx;
  padding-top: 16rpx;
}

.typing-indicator .dot {
  width: 6rpx;
  height: 6rpx;
  background: #4A90E2;
  border-radius: 50%;
  animation: blink 1s infinite;
}

/* 图片预览卡片 */
.preview-card {
  width: 100%;
  height: 400rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}

.preview-card image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* AI回答卡片 */
.answer-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.card-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 8rpx 12rpx;
  max-height: none;
}

/* 打字动画指示器 */
.typing-indicator {
  display: flex;
  gap: 6rpx;
  align-items: center;
}

.typing-indicator .dot {
  width: 6rpx;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: 50%;
  animation: blink 1s infinite;
}

.typing-indicator .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes blink {
  0%, 100% { opacity: 0.2; }
  50% { opacity: 1; }
}

/* 修改右眼样式 */
.eye:last-child .pupil {
  width: 60rpx;
  height: 60rpx;
  background: #333333;
  border-radius: 50%;
  position: relative;
  animation: look-around 5s ease-in-out infinite;
}

/* 修改嘴巴样式和位置 */
.mouth {
  display: none;
}

/* 添加返回按钮样式 */
.back-button {
  position: fixed;
  top: env(safe-area-inset-top);
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.back-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}
