/**index.wxss**/
page {
  --primary-color: #4A90E2;
  --secondary-color: #F5A623;
  --text-color: #333333;
  --background-color: #FFF9E6;
  --border-radius: 16rpx;
  height: 100vh;
  background-color: var(--background-color);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  margin-top: calc(128rpx + env(safe-area-inset-top));
}

.container {
  padding: 0 30rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 标题模块 */
.header {
  padding: 60rpx 0;
  text-align: center;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInDown 0.8s ease;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
}

/* 内容展示模块 */
.content-section {
  flex: 1;
  margin: 30rpx 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--border-radius);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  backdrop-filter: blur(10px);
}

.welcome-animation {
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  margin: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
}

.scan-animation {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.eyes-container {
  height: 80vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 100rpx;
  position: relative;
}

.eye {
  width: 160rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 50%;
  position: relative;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: blink 4s ease-in-out infinite;
}

.eye:first-child {
  transform: translateX(-80rpx);
}

.eye:last-child {
  transform: translateX(80rpx);
}

.eye.white {
  background: #FFFFFF;
}

.pupil {
  width: 60rpx;
  height: 60rpx;
  background: #333333;
  border-radius: 50%;
  position: relative;
  animation: look-around 5s ease-in-out infinite;
}

.eye.white .pupil {
  background: #333333;
}

.guide-text {
  font-size: 32rpx;
  color: #666;
  margin-top: 40rpx;
  text-align: center;
  animation: fadeIn 1s ease-in-out;
}

.result-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.result-section:last-child {
  margin-bottom: 0;
}

.result-section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.result-section-title .dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary-color);
  border-radius: 50%;
  margin-right: 12rpx;
  display: inline-block;
}

.result-section-content {
  color: var(--text-color);
  line-height: 1.6;
  padding-left: 24rpx;
  border-left: 4rpx solid #eee;
}

.result-container {
  background: #fff;
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-top: 20rpx;
  height: 800rpx;
}

.result-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-content {
  color: #333;
  line-height: 1.8;
  padding: 20rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
}

.controls {
  display: flex;
  gap: 12rpx;
}

.control-btn {
  min-width: 60rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  color: #666;
}

/* 加载动画 */
.analyzing-animation {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: var(--primary-color);
  border-radius: 50%;
  animation: bounce 0.6s infinite;
}

.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

/* 按钮模块 */
.action-section {
  padding: 20rpx 0;
  margin-top: auto;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 32rpx;
  background: var(--primary-color);
  color: #FFFFFF;
  border: none;
}

.action-button:last-child {
  background: #FFFFFF;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.primary-btn {
  background: #07c160;
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx;
}

.primary-btn:active {
  opacity: 0.8;
}

.font-control {
  display: flex;
  gap: 10rpx;
}

.font-control button {
  margin: 0;
  padding: 0 20rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #333;
}

.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  padding-top: calc(env(safe-area-inset-top) + 40rpx);
  background: var(--background-color);
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

/* 进度条样式 */
.progress-container {
  width: 100%;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #E8E8E8;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-inner {
  height: 100%;
  background: var(--primary-color);
  border-radius: 3rpx;
  width: 0;
  animation: progress 2s ease-in-out infinite;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 进度条动画 */
@keyframes progress {
  0% {
    width: 0;
    opacity: 1;
  }
  50% {
    width: 100%;
    opacity: 0.5;
  }
  100% {
    width: 0;
    opacity: 1;
  }
}

/* 移除旧的按钮样式 */
.primary-button, .secondary-button {
  display: none;
}

/* 眼睛动画 */
@keyframes blink {
  0%, 95%, 100% { transform: scaleY(1); }
  97% { transform: scaleY(0.1); }
}

@keyframes look-around {
  0%, 100% { transform: translate(0, 0); }
  25% { transform: translate(15rpx, -15rpx); }
  50% { transform: translate(-15rpx, 15rpx); }
  75% { transform: translate(15rpx, 15rpx); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
  width: 4rpx;
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: var(--primary-color);
  border-radius: 2rpx;
}

/* 结果页面样式 */
.result-page {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 240rpx);
  width: 100vw;
  margin-left: -30rpx; /* 抵消container的padding */
}

/* 图片预览 */
.preview-image {
  width: 100%;
  height: 400rpx;
  object-fit: contain;
}

/* AI回答面板 */
.answer-panel {
  flex: 1;
  background: #E8F4F8; /* 浅蓝色背景 */
  padding: 30rpx;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -20rpx; /* 与图片有一点重叠 */
}

/* 消息气泡 */
.message-bubble {
  background: #E8FFE8; /* 浅绿色背景 */
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  white-space: pre-wrap;
  word-break: break-all;
}

/* 打字动画指示器 */
.typing-indicator {
  display: flex;
  gap: 6rpx;
  padding-top: 16rpx;
}

.typing-indicator .dot {
  width: 6rpx;
  height: 6rpx;
  background: #4A90E2;
  border-radius: 50%;
  animation: blink 1s infinite;
}

/* 图片预览卡片 */
.preview-card {
  width: 100%;
  height: 400rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}

.preview-card image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* AI回答卡片 */
.answer-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.card-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 8rpx 12rpx;
  max-height: none;
}

/* 打字动画指示器 */
.typing-indicator {
  display: flex;
  gap: 6rpx;
  align-items: center;
}

.typing-indicator .dot {
  width: 6rpx;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: 50%;
  animation: blink 1s infinite;
}

.typing-indicator .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes blink {
  0%, 100% { opacity: 0.2; }
  50% { opacity: 1; }
}

/* 修改右眼样式 */
.eye:last-child .pupil {
  width: 60rpx;
  height: 60rpx;
  background: #333333;
  border-radius: 50%;
  position: relative;
  animation: look-around 5s ease-in-out infinite;
}

/* 修改嘴巴样式和位置 */
.mouth {
  width: 120rpx;
  height: 60rpx;
  border-bottom: 16rpx solid #333;
  border-radius: 0 0 60rpx 60rpx;
  position: absolute;
  left: 50%;
  top: 65%;
  transform: translateX(-50%);
  animation: smile 3s ease-in-out infinite;
}

/* 嘴巴动画 */
@keyframes smile {
  0%, 100% { 
    width: 120rpx;
    height: 60rpx;
  }
  50% { 
    width: 140rpx;
    height: 70rpx;
  }
}
